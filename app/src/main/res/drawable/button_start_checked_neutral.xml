<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient android:angle="90"
                      android:startColor="@color/buttonShadow"
                      android:endColor="@color/buttonShadowDark"/>
        </shape>
    </item>
    <item android:bottom="1dp"
          android:right="1dp"
          android:left="1dp"
          android:top="1dp">
        <shape
            android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
        </shape>
    </item>
    <item android:bottom="12dp"
          android:left="12dp"
          android:right="12dp"
          android:top="12dp">
        <bitmap android:src="@android:drawable/ic_media_pause"/>
    </item>
</layer-list>
