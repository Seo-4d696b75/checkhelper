<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_navigation"
    app:startDestination="@id/topFragment">

    <fragment
        android:id="@+id/topFragment"
        android:name="jp.seo.station.ekisagasu.ui.top.TopFragment"
        android:label="TopFragment">
        <action
            android:id="@+id/action_mainFragment_to_logFragment"
            app:destination="@id/logFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingFragment"
            app:destination="@id/settingFragment" />
    </fragment>
    <fragment
        android:id="@+id/logFragment"
        android:name="jp.seo.station.ekisagasu.ui.LogFragment"
        android:label="LogFragment" />
    <action
        android:id="@+id/action_global_mainFragment"
        app:destination="@id/topFragment" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="jp.seo.station.ekisagasu.ui.setting.SettingFragment"
        android:label="SettingFragment" />
    <dialog
        android:id="@+id/lineDialog"
        android:name="jp.seo.station.ekisagasu.ui.dialog.LineDialog"
        android:label="LineDialog">
        <argument
            android:name="type"
            android:defaultValue="Current"
            app:argType="jp.seo.station.ekisagasu.ui.dialog.LineDialogType" />
    </dialog>
    <action
        android:id="@+id/action_global_lineDialog"
        app:destination="@id/lineDialog" />
    <dialog
        android:id="@+id/dataCheckDialog"
        android:name="jp.seo.station.ekisagasu.ui.dialog.DataCheckDialog"
        android:label="DataCheckDialog">
        <argument
            android:name="type"
            android:defaultValue="Latest"
            app:argType="jp.seo.station.ekisagasu.ui.dialog.DataCheckType" />
        <argument
            android:name="info"
            app:argType="jp.seo.station.ekisagasu.core.DataLatestInfo" />
    </dialog>
    <action
        android:id="@+id/action_global_dataCheckDialog"
        app:destination="@id/dataCheckDialog" />
    <dialog
        android:id="@+id/dataUpdateDialog"
        android:name="jp.seo.station.ekisagasu.ui.dialog.DataUpdateDialog"
        android:label="DataUpdateDialog">
        <argument
            android:name="info"
            app:argType="jp.seo.station.ekisagasu.core.DataLatestInfo" />
    </dialog>
    <action
        android:id="@+id/action_global_dataUpdateDialog"
        app:destination="@id/dataUpdateDialog" />
</navigation>
