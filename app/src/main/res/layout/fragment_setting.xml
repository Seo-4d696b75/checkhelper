<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="jp.seo.station.ekisagasu.ui.setting.SettingViewModel" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="2"
                android:layout_margin="10dp"
                android:src="@drawable/interval" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_freq"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <jp.seo.android.widget.CustomNumberPicker
                android:id="@+id/number_time_interval"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_rowSpan="2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                app:max="60"
                app:min="1"
                app:speedShiftPoint="1"
                app:speedShiftRate="2"
                app:step="1"
                app:value="@{viewModel.state.locationUpdateInterval}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_freq"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="2"
                android:layout_margin="10dp"
                android:src="@drawable/radar" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_radar"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <jp.seo.android.widget.CustomNumberPicker
                android:id="@+id/number_radar"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_rowSpan="2"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                app:max="20"
                app:min="12"
                app:step="1"
                app:value="@{viewModel.state.searchK}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_radar"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="11"
                android:layout_margin="10dp"
                android:src="@drawable/ic_notify" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_notification"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isPushNotification}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_notification"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_force_notify"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_force_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isPushNotificationForce}"
                android:enabled="@{viewModel.state.isPushNotification}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_force_notify"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_notify_stationary"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_keep_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isKeepNotification}"
                android:enabled="@{viewModel.state.isPushNotification}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_notify_stationary"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_notify_prefecture"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_display_prefecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isShowPrefectureNotification}"
                android:enabled="@{viewModel.state.isPushNotification}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_notify_prefecture"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="5"
                android:layout_margin="10dp"
                android:src="@drawable/ic_vibrate" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_vibe"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isVibrate}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_vibe"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_meter"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_vibrate_approach"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="0dp"
                android:checked="@{viewModel.state.isVibrateWhenApproach}"
                android:enabled="@{viewModel.state.isVibrate}" />


            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_meter"
                android:textColor="@color/colorText"
                android:textSize="12sp" />

            <jp.seo.android.widget.CustomNumberPicker
                android:id="@+id/number_vibrate_meter"
                android:layout_width="80dp"
                android:layout_height="120dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:descendantFocusability="blocksDescendants"
                android:enabled="@{viewModel.state.isVibrate}"
                android:focusable="false"
                app:max="1000"
                app:min="50"
                app:speedShiftPoint="1"
                app:speedShiftRate="2"
                app:step="10"
                app:value="@{viewModel.state.vibrateDistance}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="9"
                android:layout_margin="10dp"
                android:src="@drawable/brightness" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_night"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowSpan="2"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:checked="@{viewModel.state.isNightMode}" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_night"
                android:textColor="@color/colorText"
                android:textSize="12sp" />


            <View
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:text="@string/setting_title_night_switch"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout_log_filter"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="10dp"
                android:hint="@string/setting_mes_night_select"
                app:layout_constraintStart_toEndOf="@id/text_layout_log_since"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/dropdown_night_timeout"
                    android:layout_width="240dp"
                    android:layout_height="50dp"
                    android:ellipsize="end"
                    android:inputType="none"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_brightness"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <FrameLayout
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_rowSpan="2"
                android:layout_margin="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/setting_mes_brightness_sample" />

                <View
                    android:id="@+id/view_sample_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#BB000000" />
            </FrameLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:text="@string/setting_mes_brightness"
                android:textColor="@color/colorText"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/setting_mes_brightness_dart"
                    android:textColor="@color/colorText" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/seek_brightness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:value="@{viewModel.state.nightModeBrightness}" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center"
                    android:text="@string/setting_mes_brightness_bright"
                    android:textColor="@color/colorText" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_columnSpan="3"
                android:layout_margin="10dp"
                android:background="@color/colorPrimaryDark" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_rowSpan="3"
                android:layout_margin="10dp"
                android:src="@drawable/ic_sync" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="@string/setting_title_data"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button_update_data"
                android:layout_rowSpan="3"
                android:text="@string/setting_mes_update_data" />


            <TextView
                android:id="@+id/text_data_version"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                app:dataVersion="@{viewModel.dataVersion}" />

            <TextView
                android:id="@+id/text_data_timestamp"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:padding="3dp"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                app:dataUpdatedAt="@{viewModel.dataVersion}" />


        </GridLayout>

    </ScrollView>
</layout>
