<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="jp.seo.station.ekisagasu.ui.top.LogViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="表示期間"
                android:textColor="@color/colorText" />

            <TextView
                android:id="@+id/text_log_filter_since"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                app:logTarget="@{viewModel.target}" />

            <Button
                android:id="@+id/button_select_history"
                android:text="選択" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="フィルター"
                android:textColor="@color/colorText" />

            <Spinner
                android:id="@+id/spinner_filter_log"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_columnSpan="2"
                android:layout_marginTop="10dp" />
        </GridLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:fastScrollEnabled="true"
            android:padding="3dp"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/button_write_log"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:src="@drawable/ic_save"
            app:backgroundTint="@color/colorPrimary"
            app:fabSize="normal" />
    </RelativeLayout>
</layout>
