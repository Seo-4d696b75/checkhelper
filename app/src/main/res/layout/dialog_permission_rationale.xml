<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="rationale"
            type="jp.seo.station.ekisagasu.ui.permission.PermissionRationale" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <TextView
            android:id="@+id/text_permission_rationale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:permissionRationale="@{rationale}"
            tools:text="権限が必要な理由を説明" />

        <ImageView
            android:id="@+id/image_request_guide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:contentDescription="@null"
            android:paddingStart="20dp"
            android:paddingTop="20dp"
            android:paddingEnd="20dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_permission_rationale"
            app:permissionRequestGuideImg="@{rationale}"
            tools:src="@drawable/location_permission" />

        <TextView
            android:id="@+id/text_request_guide_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            app:layout_constraintEnd_toEndOf="@id/image_request_guide"
            app:layout_constraintStart_toStartOf="@id/image_request_guide"
            app:layout_constraintTop_toBottomOf="@id/image_request_guide"
            app:permissionRequestGuideCaption="@{rationale}"
            tools:text="@string/dialog_guide_image_caption"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_request_permission_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_request_guide_caption"
            app:permissionRequest="@{rationale}"
            tools:text="画面遷移後の操作を説明" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
