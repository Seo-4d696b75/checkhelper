<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/notification_back">

            <ImageView
                android:id="@+id/image_notification_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:contentDescription="@null"
                android:src="@drawable/launch_icon"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintStart_toStartOf="parent"
                custom:layout_constraintTop_toTopOf="parent" />


            <com.seo4d696b75.android.ekisagasu.ui.common.ExpandableTextView
                android:id="@+id/station_name_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp"
                custom:layout_constrainedWidth="true"
                custom:layout_constraintBottom_toTopOf="@id/text_notification_distance"
                custom:layout_constraintEnd_toStartOf="@id/text_notification_prefecture"
                custom:layout_constraintHorizontal_bias="0"
                custom:layout_constraintHorizontal_chainStyle="packed"
                custom:layout_constraintStart_toEndOf="@id/image_notification_icon"
                custom:layout_constraintTop_toTopOf="parent"
                custom:layout_constraintVertical_chainStyle="packed"
                tools:text="新宿" />

            <TextView
                android:id="@+id/text_notification_prefecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:textColor="@color/colorTextDark"
                android:textSize="12sp"
                android:textStyle="normal"
                android:visibility="visible"
                custom:layout_constraintBottom_toBottomOf="@id/station_name_notification"
                custom:layout_constraintEnd_toStartOf="@id/text_notification_time"
                custom:layout_constraintStart_toEndOf="@id/station_name_notification"
                tools:text="東京都"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_notification_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                custom:layout_constraintBottom_toBottomOf="parent"
                custom:layout_constraintStart_toStartOf="@id/station_name_notification"
                custom:layout_constraintTop_toBottomOf="@id/station_name_notification"
                custom:layout_constraintVertical_chainStyle="packed"
                tools:text="176m" />

            <com.seo4d696b75.android.ekisagasu.ui.common.ExpandableTextView
                android:id="@+id/text_notification_lines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:gravity="start"
                android:lines="1"
                android:textColor="@color/colorText"
                android:textSize="14sp"
                custom:layout_constraintEnd_toStartOf="@id/text_notification_time"
                custom:layout_constraintStart_toEndOf="@id/text_notification_distance"
                custom:layout_constraintTop_toTopOf="@id/text_notification_distance"
                tools:text="山手線" />

            <TextView
                android:id="@+id/text_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="6dp"
                android:paddingStart="10dp"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                custom:layout_constraintEnd_toEndOf="parent"
                custom:layout_constraintTop_toTopOf="parent"
                tools:text="たった今" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>

