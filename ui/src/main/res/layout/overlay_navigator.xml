<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="state"
            type="com.seo4d696b75.android.ekisagasu.ui.navigator.NavigatorUiState" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/notification_back">

            <ImageView
                android:id="@+id/image_notification_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="@null"
                android:src="@drawable/launch_icon"
                auto:layout_constraintStart_toStartOf="parent"
                auto:layout_constraintTop_toTopOf="parent" />

            <com.seo4d696b75.android.ekisagasu.ui.common.ExpandableTextView
                android:id="@+id/text_navigator_line"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:gravity="end"
                android:padding="3dp"
                android:textColor="@color/colorText"
                android:textSize="12sp"
                auto:layout_constraintBottom_toTopOf="@id/button_navigator_stop"
                auto:layout_constraintEnd_toEndOf="parent"
                auto:layout_constraintTop_toTopOf="parent"
                auto:layout_constraintVertical_chainStyle="packed"
                auto:navigatorLine="@{state}"
                tools:text="JR東海道本線" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_navigator_predication"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:scrollbars="none"
                auto:layout_constraintBottom_toBottomOf="parent"
                auto:layout_constraintEnd_toStartOf="@id/text_navigator_line"
                auto:layout_constraintStart_toEndOf="@id/image_notification_icon"
                auto:layout_constraintTop_toTopOf="parent" />


            <ProgressBar
                android:id="@+id/progress_initializing"
                style="?android:attr/progressBarStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                auto:layout_constraintBottom_toBottomOf="@id/list_navigator_predication"
                auto:layout_constraintEnd_toStartOf="@id/text_initializing"
                auto:layout_constraintHorizontal_chainStyle="packed"
                auto:layout_constraintStart_toStartOf="@id/list_navigator_predication"
                auto:layout_constraintTop_toTopOf="@id/list_navigator_predication"
                auto:visibleForInitializing="@{state}"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/text_initializing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/navigation_wait"
                android:textColor="@color/colorTextGray"
                android:textSize="12sp"
                android:visibility="gone"
                auto:layout_constraintBottom_toBottomOf="@id/list_navigator_predication"
                auto:layout_constraintEnd_toEndOf="@id/list_navigator_predication"
                auto:layout_constraintStart_toEndOf="@id/progress_initializing"
                auto:layout_constraintTop_toTopOf="@id/list_navigator_predication"
                auto:visibleForInitializing="@{state}"
                tools:visibility="visible" />

            <View
                android:id="@+id/navigator_toggle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                auto:layout_constraintBottom_toBottomOf="parent"
                auto:layout_constraintEnd_toEndOf="parent"
                auto:layout_constraintStart_toStartOf="parent"
                auto:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_navigator_select_line"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="5dp"
                android:background="@drawable/button_line_select"
                auto:layout_constraintBottom_toBottomOf="@id/button_navigator_stop"
                auto:layout_constraintEnd_toStartOf="@id/button_navigator_stop" />

            <Button
                android:id="@+id/button_navigator_stop"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_line_cancel"
                auto:layout_constraintBottom_toBottomOf="parent"
                auto:layout_constraintEnd_toEndOf="parent"
                auto:layout_constraintTop_toBottomOf="@id/text_navigator_line" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>
</layout>
